<?xml version="1.0" encoding="UTF-8"?>
<project
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
    xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>org.eclipse.viatra.parent.all</artifactId>
        <groupId>org.eclipse.viatra</groupId>
        <version>1.7.2-SNAPSHOT</version>
        <relativePath>../../releng/org.eclipse.viatra.parent.all/pom.xml</relativePath>
    </parent>
    <artifactId>org.eclipse.viatra.update</artifactId>
    <packaging>eclipse-repository</packaging>
    <properties>
       <target.classifier>luna</target.classifier>
    </properties>
    <build>
        <plugins>
            <plugin>
                <groupId>org.eclipse.tycho</groupId>
                <artifactId>tycho-p2-repository-plugin</artifactId>
                <version>${tycho.version}</version>
                <configuration>
                    <repositoryName>VIATRA</repositoryName>
                    <includePackedArtifacts>true</includePackedArtifacts>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
        </plugins>
    </build>
       <profiles>
        <profile>
            <id>build-integration-composite</id>
            <activation>
                <activeByDefault>false</activeByDefault>
                <property>
                    <name>BUILD_TYPE</name>
                    <value>integration</value>
                </property>
            </activation>
                    <build>
                <plugins>
                    <plugin>
                        <groupId>org.eclipse.tycho.extras</groupId>
                        <artifactId>tycho-eclipserun-plugin</artifactId>
                        <version>${tycho.version}</version>
                        <configuration>
                            <!-- IMPORTANT: do not split the appArgLine -->
                            <appArgLine>-application org.eclipse.ant.core.antRunner -buildfile ${project.basedir}/packaging-p2composite.ant p2.composite.add -Dsoftware.download.area=${viatra.download.area} -Dupdates.dir=${viatra.updates.dir} -Dsite.label="VIATRA" -Dproject.build.directory=${project.build.directory} -DunqualifiedVersion=${unqualifiedVersion} -DbuildQualifier=${buildQualifier} -Dbuild.type=${BUILD_TYPE}</appArgLine>
                            <repositories>
                                <repository>
                                    <id>luna</id>
                                    <layout>p2</layout>
                                    <url>http://download.eclipse.org/releases/luna</url>
                                </repository>
                            </repositories>
                            <dependencies>
                                <dependency>
                                    <artifactId>org.eclipse.ant.core</artifactId>
                                    <type>eclipse-plugin</type>
                                </dependency>
                                <dependency>
                                    <artifactId>org.apache.ant</artifactId>
                                    <type>eclipse-plugin</type>
                                </dependency>
                                <dependency>
                                    <artifactId>org.eclipse.equinox.p2.repository.tools</artifactId>
                                    <type>eclipse-plugin</type>
                                </dependency>
                                <dependency>
                                    <artifactId>org.eclipse.equinox.p2.core.feature</artifactId>
                                    <type>eclipse-feature</type>
                                </dependency>
                                <dependency>
                                    <artifactId>org.eclipse.equinox.p2.extras.feature</artifactId>
                                    <type>eclipse-feature</type>
                                </dependency>
                                <dependency>
                                    <artifactId>org.eclipse.equinox.ds</artifactId>
                                    <type>eclipse-plugin</type>
                                </dependency>
                            </dependencies>
                        </configuration>
                        <executions>
                            <execution>
                                <id>add-p2-composite-repository</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>eclipse-run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>build-milestone-composite</id>
            <activation>
                <activeByDefault>false</activeByDefault>
                <property>
                    <name>BUILD_TYPE</name>
                    <value>milestone</value>
                </property>
            </activation>
                    <build>
                <plugins>
                    <plugin>
                        <groupId>org.eclipse.tycho.extras</groupId>
                        <artifactId>tycho-eclipserun-plugin</artifactId>
                        <version>${tycho.version}</version>
                        <configuration>
                            <!-- IMPORTANT: do not split the appArgLine -->
                            <appArgLine>-application org.eclipse.ant.core.antRunner -buildfile ${project.basedir}/packaging-p2composite.ant p2.composite.add -Dsoftware.download.area=${viatra.download.area} -Dupdates.dir=${viatra.updates.dir} -Dsite.label="VIATRA" -Dproject.build.directory=${project.build.directory} -DunqualifiedVersion=${unqualifiedVersion} -DbuildQualifier=${buildQualifier} -Dbuild.type=${BUILD_TYPE}</appArgLine>
                            <repositories>
                                <repository>
                                    <id>luna</id>
                                    <layout>p2</layout>
                                    <url>http://download.eclipse.org/releases/luna</url>
                                </repository>
                            </repositories>
                            <dependencies>
                                <dependency>
                                    <artifactId>org.eclipse.ant.core</artifactId>
                                    <type>eclipse-plugin</type>
                                </dependency>
                                <dependency>
                                    <artifactId>org.apache.ant</artifactId>
                                    <type>eclipse-plugin</type>
                                </dependency>
                                <dependency>
                                    <artifactId>org.eclipse.equinox.p2.repository.tools</artifactId>
                                    <type>eclipse-plugin</type>
                                </dependency>
                                <dependency>
                                    <artifactId>org.eclipse.equinox.p2.core.feature</artifactId>
                                    <type>eclipse-feature</type>
                                </dependency>
                                <dependency>
                                    <artifactId>org.eclipse.equinox.p2.extras.feature</artifactId>
                                    <type>eclipse-feature</type>
                                </dependency>
                                <dependency>
                                    <artifactId>org.eclipse.equinox.ds</artifactId>
                                    <type>eclipse-plugin</type>
                                </dependency>
                            </dependencies>
                        </configuration>
                        <executions>
                            <execution>
                                <id>add-p2-composite-repository</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>eclipse-run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>build-release-composite</id>
            <activation>
                <activeByDefault>false</activeByDefault>
                <property>
                    <name>BUILD_TYPE</name>
                    <value>release</value>
                </property>
            </activation>
                    <build>
                <plugins>
                    <plugin>
                        <groupId>org.eclipse.tycho.extras</groupId>
                        <artifactId>tycho-eclipserun-plugin</artifactId>
                        <version>${tycho.version}</version>
                        <configuration>
                            <!-- IMPORTANT: do not split the appArgLine -->
                            <appArgLine>-application org.eclipse.ant.core.antRunner -buildfile ${project.basedir}/packaging-p2composite.ant p2.composite.add -Dsoftware.download.area=${viatra.download.area} -Dupdates.dir=${viatra.updates.dir} -Dsite.label="VIATRA" -Dproject.build.directory=${project.build.directory} -DunqualifiedVersion=${unqualifiedVersion} -DbuildQualifier=${buildQualifier} -Dbuild.type=${BUILD_TYPE}</appArgLine>
                            <repositories>
                                <repository>
                                    <id>luna</id>
                                    <layout>p2</layout>
                                    <url>http://download.eclipse.org/releases/luna</url>
                                </repository>
                            </repositories>
                            <dependencies>
                                <dependency>
                                    <artifactId>org.eclipse.ant.core</artifactId>
                                    <type>eclipse-plugin</type>
                                </dependency>
                                <dependency>
                                    <artifactId>org.apache.ant</artifactId>
                                    <type>eclipse-plugin</type>
                                </dependency>
                                <dependency>
                                    <artifactId>org.eclipse.equinox.p2.repository.tools</artifactId>
                                    <type>eclipse-plugin</type>
                                </dependency>
                                <dependency>
                                    <artifactId>org.eclipse.equinox.p2.core.feature</artifactId>
                                    <type>eclipse-feature</type>
                                </dependency>
                                <dependency>
                                    <artifactId>org.eclipse.equinox.p2.extras.feature</artifactId>
                                    <type>eclipse-feature</type>
                                </dependency>
                                <dependency>
                                    <artifactId>org.eclipse.equinox.ds</artifactId>
                                    <type>eclipse-plugin</type>
                                </dependency>
                            </dependencies>
                        </configuration>
                        <executions>
                            <execution>
                                <id>add-p2-composite-repository</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>eclipse-run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>