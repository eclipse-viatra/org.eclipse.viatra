module org.eclipse.viatra.transformation.tracer.generator

import org.eclipse.emf.mwe.utils.*
import org.eclipse.emf.mwe2.ecore.*

var projectName = "org.eclipse.viatra.query.patternlanguage.metamodel"
var genModelPath = "platform:/resource/${projectName}/model/GraphicalPatternLanguage.genmodel"
var emfDirectory = "${projectName}/emf-gen"
var emfEditDirectory = "${projectName}.edit/emf-gen"

Workflow {
    bean = StandaloneSetup {
        scanClassPath = true
        platformUri = "../.."
        
        registerGenModelFile = genModelPath
    }

    component = DirectoryCleaner {
        directory = emfDirectory
    }
    component = DirectoryCleaner {
        directory = emfEditDirectory
    }

    component = EcoreGenerator {
        genModel = genModelPath
        srcPath = "platform:/resource/${emfDirectory}"
        generateEdit = true
    }
 
}