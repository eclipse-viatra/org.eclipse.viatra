<?xml version="1.0" encoding="UTF-8"?>
<feature
      id="org.eclipse.viatra.query.language.feature"
      label="VIATRA Query Runtime - Pattern Language Support"
      version="2.0.0.qualifier"
      provider-name="Eclipse VIATRA Project"
      license-feature="org.eclipse.license"
      license-feature-version="0.0.0">

   <license url="%licenseURL">
      %license
   </license>

   <description>
      VIATRA Query runtime feature. This is the minimum dependency to execute VIATRA Query matchers from textual queries.
   </description>

   <url>
      <update label="VIATRA" url="http://download.eclipse.org/viatra/updates/release/"/>
   </url>

   <requires>
      <import feature="org.eclipse.viatra.query.runtime.feature" version="2.0.0" match="equivalent"/>
      <import feature="org.eclipse.xtext.runtime" version="2.9.0" match="compatible"/>
   </requires>

   <plugin
         id="org.eclipse.viatra.query.patternlanguage.emf"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

   <plugin
         id="com.google.inject"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

   <plugin
         id="com.google.inject.multibindings"
         download-size="0"
         install-size="0"
         version="0.0.0"
         fragment="true"
         unpack="false"/>

</feature>
