<?xml version="1.0" encoding="UTF-8"?>
<feature
      id="org.eclipse.viatra.query.language.feature"
      label="VIATRA Query Runtime - Pattern Language Support"
      version="2.8.2.qualifier"
      provider-name="Eclipse VIATRA Project"
      license-feature="org.eclipse.license"
      license-feature-version="2.0.2">

   <description>
      VIATRA Query runtime feature. This is the minimum dependency to execute VIATRA Query matchers from textual queries.
   </description>

   <copyright>
      Copyright (c) 2010,2018 Budapest University of Technology and Economics, IncQuery Labs Ltd. and others.
   </copyright>

   <license url="%licenseURL">
      %license
   </license>

   <url>
      <update label="VIATRA" url="http://download.eclipse.org/viatra/updates/release/"/>
   </url>

   <requires>
      <import feature="org.eclipse.viatra.query.runtime.feature" version="2.8.0" match="equivalent"/>
      <import feature="org.eclipse.xtext.runtime" version="2.16.0" match="compatible"/>
      <import plugin="com.google.inject" version="3.0.0" match="greaterOrEqual"/>
   </requires>

   <plugin
         id="org.eclipse.viatra.query.patternlanguage.emf"
         version="0.0.0"/>

</feature>
