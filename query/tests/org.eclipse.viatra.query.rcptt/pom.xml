<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>org.eclipse.viatra.parent.all</artifactId>
		<groupId>org.eclipse.viatra</groupId>
		<version>2.0.3-SNAPSHOT</version>
		<relativePath>../../../releng/org.eclipse.viatra.parent.all/pom.xml</relativePath>
	</parent>
	<artifactId>org.eclipse.viatra.query.rcptt</artifactId>
	<name>VIATRA CPS Tests</name>
	<packaging>pom</packaging>
	<modules>
		<module>org.eclipse.viatra.query.rcptt.queries</module>
		<module>org.eclipse.viatra.query.rcptt.queries.validation</module>
		<module>org.eclipse.viatra.query.rcptt.queries.feature</module>
		<module>org.eclipse.viatra.query.rcptt.product</module>
	</modules>
	
	<properties>
    	    <rcptt.version>2.1.0</rcptt.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<target.classifier>neon</target.classifier>
	</properties>
	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-packaging-plugin</artifactId>
				<version>${tycho.version}</version>
				<configuration>
					<strictBinIncludes>false</strictBinIncludes>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<version>${tycho.version}</version>
				<extensions>true</extensions>
			</plugin>
		</plugins>
	</build>
	<repositories>
	   <repository>
	       <id>rcptt.core</id>
	       <layout>p2</layout>
	       <url>http://download.eclipse.org/rcptt/release/${rcptt.version}/repository</url>
	   </repository>
	   <repository>
	       <id>rcptt.runtime</id>
	       <layout>p2</layout>
	       <url>http://download.eclipse.org/rcptt/release/${rcptt.version}/runtime4x</url>
	   </repository>
	   <repository>
	       <id>aspectj</id>
	       <layout>p2</layout>
	       <url>http://download.eclipse.org/tools/ajdt/37/update/</url>
	   </repository>
	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<id>rcptt-releases</id>
			<name>RCPTT Maven repository</name>
			<url>https://repo.eclipse.org/content/repositories/rcptt-releases</url>
			<snapshots>
				<updatePolicy>always</updatePolicy>
			</snapshots>
		</pluginRepository>
	</pluginRepositories>
	<profiles>
        <profile>
            <id>run-ui-tests</id>
            <activation>
                 <activeByDefault>false</activeByDefault>
                 <property>
                     <name>runUITests</name>
                     <value>true</value>
                 </property>
            </activation>
            <modules>
                 <module>org.eclipse.viatra.query.rcptt.tests</module>
            </modules>
        </profile>
    </profiles>
</project>