package org.eclipse.viatra.query.runtime.cps.tests.queries
// This tests the 481265 bug

import "http://org.eclipse.viatra/model/cps"

pattern called(a : HostInstance) {
    HostInstance(a);
}

pattern callee(a1 : HostInstance, a2 : HostInstance) {
    find called(a1);
    find called(a2);
    HostInstance.communicateWith(a1, a2);
}

pattern flattened(a1 : HostInstance, a2 : HostInstance) {
    //find called(a1);
    HostInstance(called_a1);
    a1 == called_a1;
    //find called(a2);
    HostInstance(called_a2);
    a2 == called_a2;
    HostInstance.communicateWith(a1, a2);
}

pattern called2(a1 : HostInstance) {
    HostInstance(a1);
} or {
    HostInstance(a1);
}

pattern callee2(a1 : HostInstance, a2 : HostInstance) {
    find called2(a1);
    find called2(a2);
    HostInstance.communicateWith(a1, a2);
}